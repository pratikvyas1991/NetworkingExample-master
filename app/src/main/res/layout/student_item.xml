<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:elevation="20dp"
    tools:context="com.ims.tasol.networkingexample.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/profileImage"
                    android:src="@color/cardview_dark_background"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/pbProfileImage"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:id="@+id/imgEditImage"
                android:layout_gravity="right|top"
                android:layout_margin="10dp"
                android:src="@drawable/edit_image"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#50000000"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/cardview_light_background"
                            android:id="@+id/studentName"
                            android:textSize="35dp"
                            android:text="Student Name"
                            android:layout_weight="50"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="55dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/cardview_light_background"
                            android:id="@+id/studenAge"
                            android:textSize="20dp"
                            android:text="Student Age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="@color/cardview_light_background"
                            android:textSize="20dp"
                            android:text="Years Old"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/btnUpdate"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/edit_user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:id="@+id/btnDelete"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="55dp"
                        android:layout_gravity="right|bottom"
                        android:src="@drawable/delete_user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="50"
                android:text="Delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="Update"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
